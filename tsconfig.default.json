{
    "compilerOptions": {
        "target": "es2018",
        "lib": [ "es2018" ],
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./lib",

        "declaration": true,
        "importHelpers": true,
        "inlineSources": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": false,
        "sourceMap": true
    },

    "include": [ "./src/**/*" ]
}
